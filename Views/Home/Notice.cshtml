    }

    .event-date {
        background: var(--secondary-color);
        display: flex;
        text-align: center;
        justify-content: center;
        line-height: 36px;
        font-size: 22px;
        font-weight: 700;
        color: white;
        /* border-right: 1px solid #FFB013; */
    }

    .event-month {
        background: white;
        display: flex;
        justify-content: center;
