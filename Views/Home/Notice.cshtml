        height: 348px;
        overflow: hidden;
    }
    .Css-box-shadow-height {
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
       
    }

    .Css-box-shadow-height2 {
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        width: 100%;
       
        padding: 26px;
        background: white;
    }

    .Css-notice-ul li {
        margin: 0px 10px !important;
    }

    .Css-notice-text {
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .Css-notice-bg {
        /* background-image: url('../../content/assets/img/team/team_bg_1.png');*/
        background-image: url('../../content/assets/img/jyoti_high_school/notice-bg-img.png');
